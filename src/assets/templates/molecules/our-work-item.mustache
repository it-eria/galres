{{#mol-our-work-item}}
    <div class="our-works__content__wrapper__item col-4">
        <a href="{{{url}}}"><img src="{{{img}}}" alt="img"/></a>
        <div class="p-3 blue-bg position-relative">
            <h3>{{title}}</h3>
            <div class="d-flex justify-content-between align-items-center ">
                <p>Розмір: <span>{{size}}</span></p>
                <p>Ціна: <span>{{price}} грн</span></p>
            </div>
            <div class="more-btn-container">
                <a class="more-btn" href="{{{url}}}">Дізнатись більше</a>
            </div>
        </div>

    </div>
{{/mol-our-work-item}}