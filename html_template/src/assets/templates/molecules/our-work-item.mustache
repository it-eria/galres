{{#mol-our-work-item}}
    <div class="our-works__content__wrapper__item col-4" >
        {{#img}}<a href="{{{url}}}"><img src="{{{img}}}" alt="img"/></a>{{/img}}
        <div class="p-3 blue-bg position-relative">
            {{#title}}<h3>{{title}}</h3>{{/title}}
            <div class="d-flex justify-content-between align-items-center ">
                {{#size}}<p>Розмір: <span>{{size}}</span></p>{{/size}}
                {{#price}}<p>Ціна: <span>{{price}} грн</span></p>{{/price}}
            </div>
            {{#url}}
                <div class="more-btn-container">
                    <a class="more-btn" href="{{{url}}}">Дізнатись більше</a>
                </div>
            {{/url}}
        </div>

    </div>
{{/mol-our-work-item}}